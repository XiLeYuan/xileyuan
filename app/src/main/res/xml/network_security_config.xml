    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">192.168.1.6</domain>
        <domain includeSubdomains="true">192.168.20.108</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.1.102</domain>
        <domain includeSubdomains="true">10.0.2.2</domain> <!-- Android模拟器 -->
    </domain-config>
