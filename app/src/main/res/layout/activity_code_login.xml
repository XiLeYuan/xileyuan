<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:paddingEnd="16dp"
        android:paddingStart="0dp">

        <!-- 导航栏 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:paddingStart="16dp"
            android:paddingEnd="0dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_back"
                android:layout_gravity="center_vertical"/>

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/tvPasswordLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码登录"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/selector_password_login_text"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:paddingStart="8dp"
                android:paddingEnd="16dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </LinearLayout>

        <!-- 主标题 -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全验证"
            android:textSize="22sp"
            android:textColor="@color/text_primary_dark"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="start"/>

        <!-- 副标题 -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="验证码已通过短信发送至："
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="16dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="start"/>

        <!-- 手机号（带提示圆点） -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="12dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="start">

            <View
                android:layout_width="6dp"
                android:layout_height="6dp"
                android:background="@drawable/dot_indicator"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="18sp"
                android:textColor="@color/text_primary_dark"
                android:fontFamily="sans-serif-medium"/>
        </LinearLayout>

        <!-- 输入验证码标题 -->
        <TextView
            android:id="@+id/tvCodeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入获取的验证码"
            android:textSize="13sp"
            android:textColor="@color/text_secondary_light"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="start"/>

        <!-- 验证码输入框容器 -->
        <LinearLayout
            android:id="@+id/llCodeContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            android:layout_marginTop="20dp">

            <EditText
                android:id="@+id/etCode1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_code_input_outlined"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:imeOptions="actionNext"
                android:cursorVisible="false"/>

            <Space android:layout_width="16dp" android:layout_height="56dp"/>

            <EditText
                android:id="@+id/etCode2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_code_input_outlined"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:imeOptions="actionNext"
                android:cursorVisible="false"/>

            <Space android:layout_width="16dp" android:layout_height="56dp"/>

            <EditText
                android:id="@+id/etCode3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_code_input_outlined"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:imeOptions="actionNext"
                android:cursorVisible="false"/>

            <Space android:layout_width="16dp" android:layout_height="56dp"/>

            <EditText
                android:id="@+id/etCode4"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:gravity="center"
                android:textSize="24sp"
                android:inputType="number"
                android:maxLength="1"
                android:background="@drawable/bg_code_input_outlined"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_hint"
                android:imeOptions="actionDone"
                android:cursorVisible="false"/>
        </LinearLayout>

        <!-- 获取验证码按钮（倒计时显示在按钮上） -->
        <TextView
            android:id="@+id/tvGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:layout_marginStart="24dp"
            android:layout_gravity="start"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/bg_get_code_button"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>

</FrameLayout>
