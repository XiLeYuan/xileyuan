<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_back"
            android:layout_marginTop="30dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录/注册 更精彩"
            android:textSize="22sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:layout_marginTop="42dp"
            android:layout_gravity="start"/>
        
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="输入手机号后，开始结婚吧！未注册手机，将自动进入注册页面。"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginTop="8dp"
            android:layout_gravity="start"
            android:lineSpacingExtra="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutPhone"
            style="@style/RoundedBorderTextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:hint="请输入手机号"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:errorTextColor="@color/text_error"
            app:helperTextEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textCursorDrawable="@drawable/cursor_dark"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="16dp"
                android:minHeight="56dp" />

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <!-- 右下角箭头按钮 -->
    <ImageButton
        android:id="@+id/btnNext"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:minWidth="120dp"
        android:background="@drawable/bg_arrow_button"
        android:src="@drawable/ic_arrow_line_white"
        android:contentDescription="下一步"
        android:scaleType="centerInside"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:enabled="false"
        android:alpha="0.5"/>

</FrameLayout>
