<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 用户头像区域 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_one"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

            <!-- 用户信息区域 -->
        <LinearLayout
            android:id="@+id/infoLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            app:layout_constraintTop_toBottomOf="@id/ivAvatar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/buttonLayout">

            <!-- 姓名、年龄和认证标识 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNameAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="缘分用户，25岁"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/verifyIv"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNameAge"
                    android:src="@mipmap/verified_icon"
                    android:layout_marginStart="5dp"
                    android:visibility="visible" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 家乡和现居地 -->
            <LinearLayout
                android:id="@+id/llLocationContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <!-- 家乡 -->
                <LinearLayout
                    android:id="@+id/llHometown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivHometown"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/home_town_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="家乡" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="家乡"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <!-- 圆点分隔符（家乡和地点之间） -->
                    <TextView
                        android:id="@+id/tvHometownDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="·"
                        android:textSize="18sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvHometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="河北"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

                <!-- 现居地 -->
                <LinearLayout
                    android:id="@+id/llResidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivResidence"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/residence_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="现居地" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="现居地"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />

                    <!-- 圆点分隔符（现居地和地点之间） -->
                    <TextView
                        android:id="@+id/tvResidenceDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="·"
                        android:textSize="18sp"
                        android:textColor="@color/text_secondary"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvResidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textSize="14sp"
                        android:textColor="@color/text_secondary" />
                </LinearLayout>

            </LinearLayout>

            <!-- 标签 -->
            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal"
                android:visibility="gone" />

        </LinearLayout>

        <!-- 关闭按钮 -->
        <ImageView
            android:id="@+id/ivClose"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_close_button"
            android:padding="8dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintTop_toTopOf="@id/ivAvatar" />

        <!-- 操作按钮 -->
        <LinearLayout
            android:id="@+id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/infoLayout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 不喜欢 -->
            <TextView
                android:id="@+id/tvDislike"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:background="@drawable/bg_dislike_button"
                android:gravity="center"
                android:text="不喜欢"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <!-- 喜欢 -->
            <TextView
                android:id="@+id/tvLike"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:background="@drawable/bg_like_button"
                android:gravity="center"
                android:text="喜欢"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
