<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="32dp"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="你在哪里？"
        android:textSize="20sp"
        android:textColor="@color/text"
        android:layout_gravity="start" />

    <TextView
        android:id="@+id/tvCurrentLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="现居地"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/tvCurrentAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/bg_education_unselected"
        android:gravity="center_vertical"
        android:hint="请选择现居地"
        android:textColor="#222222"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"
        app:drawableEndCompat="@mipmap/ic_down" />

    <TextView
        android:id="@+id/tvHometownLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选择家乡"
        android:textSize="16sp"
        android:textColor="@color/text"
        android:layout_marginTop="32dp"/>

    <TextView
        android:id="@+id/tvHometownAddress"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:drawableEndCompat="@mipmap/ic_down"
        android:background="@drawable/bg_education_unselected"
        android:gravity="center_vertical"
        android:hint="请选择家乡"
        android:textColor="#222222"
        android:textSize="16sp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="8dp"/>

</LinearLayout> 