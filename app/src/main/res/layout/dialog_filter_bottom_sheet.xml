<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/bg_primary"
    android:paddingTop="24dp"
    android:paddingBottom="24dp">

    <!-- 关闭按钮（左边） -->
    <ImageView
        android:id="@+id/ivClose"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/ic_close"
        android:contentDescription="关闭"
        android:clickable="true"
        android:focusable="true"
        android:padding="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 标题 -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="筛选"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 内容区域（可滚动） -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintBottom_toTopOf="@id/btnConfirm"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- 年龄范围 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄范围"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvAgeMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="18"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_filter_input"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvAgeMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="50"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_filter_input"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- 身高范围 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高范围"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvHeightMin"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="150"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_filter_input"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="至"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp" />

                <TextView
                    android:id="@+id/tvHeightMax"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="200"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:gravity="center"
                    android:padding="12dp"
                    android:background="@drawable/bg_filter_input"
                    android:layout_marginStart="8dp" />
            </LinearLayout>

            <!-- 学历 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学历"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexEducation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"
                app:alignItems="flex_start"
                app:justifyContent="flex_start">

                <TextView
                    android:id="@+id/tvEducation1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag_selected"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvEducation2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="高中"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvEducation3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="大专"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvEducation4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="本科"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvEducation5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="硕士"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvEducation6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="博士"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />
            </com.google.android.flexbox.FlexboxLayout>

            <!-- 收入 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收入"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary_dark"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/flexIncome"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:flexWrap="wrap"
                app:flexDirection="row"
                app:alignItems="flex_start"
                app:justifyContent="flex_start">

                <TextView
                    android:id="@+id/tvIncome1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="不限"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary_dark"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag_selected"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvIncome2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5k以下"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvIncome3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5k-10k"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvIncome4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10k-20k"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvIncome5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20k-50k"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />

                <TextView
                    android:id="@+id/tvIncome6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="50k以上"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/bg_filter_tag"
                    android:clickable="true"
                    android:focusable="true" />
            </com.google.android.flexbox.FlexboxLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <!-- 确认按钮（底部中间） -->
    <Button
        android:id="@+id/btnConfirm"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="确认"
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:background="@drawable/bg_button_primary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

