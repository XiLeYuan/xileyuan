<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关于我"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2/3说说你的生活，有什么兴趣爱好？"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="16dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="8dp">

        <EditText
            android:id="@+id/etIntro2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_intro_input"
            android:hint="请输入你的生活描述..."
            android:textColor="@color/black"
            android:textSize="14sp"
            android:padding="12dp"
            android:gravity="top|start"
            android:maxLines="5"
            android:maxLength="100"
            android:scrollbars="vertical"
            android:inputType="textMultiLine"/>

        <TextView
            android:id="@+id/tvCharCount2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="12dp"
            android:text="0/100"
            android:textSize="12sp"
            android:textColor="@color/gray"/>

    </FrameLayout>

    <TextView
        android:id="@+id/tvExample2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="示例：我是一名外科医生，平时很忙，医院家里两点一线，吃饭只能食堂解决。不过我很喜欢做饭，休息日会经常做好吃的，对自己的厨艺非常自信。"
        android:textSize="12sp"
        android:textColor="@color/gray"
        android:lineSpacingExtra="2dp"/>

</LinearLayout> 