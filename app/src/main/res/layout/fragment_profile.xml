<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 个人信息容器 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileHeader"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/profile_header_bg"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
                <!-- 圆形头像容器 -->
                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 圆形头像 -->
                    <com.xly.middlelibrary.widget.LYRoundImageView
                    android:id="@+id/avatarImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                    android:scaleType="centerCrop"
                        android:src="@mipmap/head_two" />

                    <!-- 认证标识（头像右下角） -->
                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:padding="4dp"
                        android:src="@mipmap/verified_icon" />

                </FrameLayout>

                <!-- 姓名和VIP标识 -->
                <LinearLayout
                    android:id="@+id/nameContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avatarContainer">

                    <!-- 姓名 -->
                    <TextView
                        android:id="@+id/nicknameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ella"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <!-- VIP标识 -->
                    <ImageView
                        android:id="@+id/ivVip"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:src="@mipmap/main_vip_icon" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 主要板块容器 - 左上和右上圆角，带阴影和渐变增强层次感 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainSectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-16dp"
                android:background="@drawable/bg_profile_section_with_gradient"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileHeader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 第一部分：三个入口 - 横向布局 -->
                    <LinearLayout
                        android:id="@+id/llStatsEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:weightSum="3">

                        <!-- 喜欢的人 -->
                <LinearLayout
                            android:id="@+id/llLikedPeople"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvLikedPeopleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="128"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="喜欢的人"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/divider" />

                        <!-- 访客 -->
                <LinearLayout
                            android:id="@+id/llVisitors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvVisitorsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="56"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="访客"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/divider" />

                        <!-- 谁喜欢我 -->
                <LinearLayout
                            android:id="@+id/llWhoLikedMe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvWhoLikedMeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="89"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="谁喜欢我"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

                    <!-- VIP充值入口 - 外层卡片容器 -->
                    <FrameLayout
                    android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">

                        <!-- 外层卡片 - 点击进入VIP页面 -->
            <androidx.cardview.widget.CardView
                            android:id="@+id/cvVipCardOuter"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                                android:background="@drawable/bg_vip_card_gradient" />

            </androidx.cardview.widget.CardView>

                        <!-- 内层卡片 - 点击直接开通VIP -->
        <androidx.cardview.widget.CardView
                            android:id="@+id/cvVipCardInner"
                            android:layout_width="match_parent"
            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:layout_marginTop="12dp"
                            android:layout_marginEnd="12dp"
                            android:layout_marginBottom="12dp"
                            android:clickable="true"
                            android:focusable="true"
            android:background="@drawable/bg_vip_card_gradient"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="6dp"
                            app:cardBackgroundColor="@android:color/transparent">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:id="@+id/llVipInner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_card_gradient"
                android:padding="20dp">

                                <!-- 右上角优惠信息tips -->
                    <TextView
                                    android:id="@+id/tvVipDiscount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:background="@drawable/bg_vip_discount_tag"
                        android:paddingStart="8dp"
                                    android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                                    android:paddingBottom="4dp"
                                    android:text="限时8折"
                                    android:textColor="#FFFFFF"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <!-- 主标题 -->
                    <TextView
                                    android:id="@+id/tvVipTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                    android:text="开通VIP会员"
                                    android:textColor="#FFFFFF"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent" />

                                <!-- 副标题 -->
                        <TextView
                                    android:id="@+id/tvVipSubtitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="解锁更多特权，享受专属服务"
                                    android:textColor="#FFF8DC"
                                    android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvVipTitle" />

                                <!-- 开通入口按钮 -->
                <TextView
                                    android:id="@+id/tvVipButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                                    android:layout_marginTop="16dp"
                                    android:background="@drawable/bg_vip_button"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:paddingStart="20dp"
                                    android:paddingTop="10dp"
                                    android:paddingEnd="20dp"
                                    android:paddingBottom="10dp"
                                    android:text="立即开通"
                                    android:textColor="#FF8C00"
                    android:textSize="14sp"
                    android:textStyle="bold"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toBottomOf="@id/tvVipSubtitle" />

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </androidx.cardview.widget.CardView>

                    </FrameLayout>

            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>