<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="false"
        android:overScrollMode="always"
        android:paddingBottom="80dp"
        android:scrollbars="none">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 个人信息容器 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileHeader"
                    android:layout_width="match_parent"
                android:layout_height="280dp"
                android:background="@drawable/profile_header_bg"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- 随缘入口按钮容器（个人信息容器右上角） -->
                <FrameLayout
                    android:id="@+id/fateButtonContainer"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="38dp"
                    android:layout_marginEnd="31dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?android:attr/selectableItemBackground"
                    android:clipChildren="false"
                    android:clipToPadding="false"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 随缘入口按钮图标 -->
                    <ImageView
                        android:id="@+id/fateButton"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@mipmap/yuan_icon" />

                    <!-- 圆形进度条 -->
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/fateProgressBar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:indeterminate="true"
                        android:visibility="gone"
                        app:indicatorColor="@color/brand_orange"
                        app:trackColor="#33FF6B6B"
                        app:indicatorSize="28dp"
                        app:trackThickness="2dp" />

                </FrameLayout>

                <!-- 圆形头像容器 -->
                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="72dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <!-- 圆形头像 -->
                    <com.xly.middlelibrary.widget.LYRoundImageView
                        android:id="@+id/avatarImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/head_two" />

                    <!-- 认证标识（头像右下角） -->
                        <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:padding="4dp"
                        android:src="@mipmap/verified_icon" />

                </FrameLayout>

                <!-- 姓名和VIP标识 -->
                <LinearLayout
                    android:id="@+id/nameContainer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/avatarContainer">

                    <!-- 姓名 -->
                    <TextView
                        android:id="@+id/nicknameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ella"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="20sp" />

                    <!-- VIP标识 -->
                    <ImageView
                        android:id="@+id/ivVip"
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="6dp"
                        android:src="@mipmap/main_vip_icon2" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 主要板块容器 - 左上和右上圆角，带阴影和渐变增强层次感 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainSectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-30dp"
                android:background="@drawable/bg_profile_section_with_gradient"
                android:elevation="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profileHeader">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">


                    <LinearLayout
                        android:id="@+id/llStatsEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="5dp"
                        android:weightSum="3">

                        <!-- 喜欢的人 -->
                <LinearLayout
                            android:id="@+id/llLikedPeople"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvLikedPeopleCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="128"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="喜欢的人"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/divider" />

                        <!-- 访客 -->
                <LinearLayout
                            android:id="@+id/llVisitors"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvVisitorsCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="56"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="访客"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            android:background="@color/divider" />

                        <!-- 谁喜欢我 -->
                <LinearLayout
                            android:id="@+id/llWhoLikedMe"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                            android:background="?android:attr/selectableItemBackground"
                            android:clickable="true"
                            android:focusable="true"
                            android:gravity="center"
                            android:orientation="vertical">

                    <TextView
                                android:id="@+id/tvWhoLikedMeCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                android:text="89"
                                android:textColor="@color/text_primary_dark"
                                android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                                android:text="谁喜欢我"
                                android:textColor="@color/text_hint"
                                android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

                    <FrameLayout
                        android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
                        android:layout_marginTop="15dp"
            android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp">


                        <!-- 内层卡片 - 点击直接开通VIP -->
                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/llVipInner"
                            android:layout_width="match_parent"
                android:layout_height="80dp"
                            android:background="@drawable/bg_vip_card_outer"
                            android:clickable="true"
                            android:focusable="true"
                            android:paddingLeft="16dp">

                            <!-- 右上角优惠信息tips - 紧贴右上边框 -->
                            <TextView
                                android:id="@+id/tvVipDiscount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_vip_discount_tag_primary"
                                android:paddingStart="5dp"
                                android:paddingTop="1dp"
                                android:paddingEnd="6dp"
                                android:paddingBottom="1dp"
                                android:text="限时8折"
                                android:textColor="#FFFFFF"
                                android:textSize="9sp"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                    android:orientation="vertical"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent">
                                <!-- 主标题 -->
                    <TextView
                                    android:id="@+id/tvVipTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:text="开通VIP会员"
                                    android:textColor="#4A3A1A"
                                    android:textSize="18sp"
                        android:textStyle="bold" />
                                <!-- 副标题 -->
                    <TextView
                                    android:id="@+id/tvVipSubtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="解锁更多特权，享受专属服务"
                                    android:textColor="#6B5B2D"
                                    android:textSize="12sp" />

                </LinearLayout>

                            <!-- 开通入口按钮 - 右边竖直居中 -->
                            <TextView
                                android:id="@+id/tvVipButton"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:layout_marginEnd="16dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/bg_vip_button_dark"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                android:paddingStart="12dp"
                                android:paddingEnd="12dp"
                                android:text="立即开通"
                                android:textColor="#FFFFFF"
                                android:textSize="13sp"
                                android:textStyle="bold"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintEnd_toEndOf="parent" />

                        </androidx.constraintlayout.widget.ConstraintLayout>


                    </FrameLayout>

                    <!-- 我的资料入口 -->
            <androidx.cardview.widget.CardView
                        android:id="@+id/cvMyProfile"
                    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
                        android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- 我的资料 -->
                <LinearLayout
                                android:id="@+id/llMyProfile"
                    android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_profile_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                                    android:text="我的资料"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                    <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light" />

                </LinearLayout>

                            <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/divider_horizontal" />

                            <!-- 我的特权 -->
                <LinearLayout
                                android:id="@+id/llMyPrivilege"
                    android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_privilege_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                                    android:text="我的特权"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light" />

                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <!-- 功能入口卡片 -->
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginBottom="16dp"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="1dp">

                        <LinearLayout
                    android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                <!-- 我的钱包 -->
                <LinearLayout
                                android:id="@+id/llMyWallet"
                    android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_wallet_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="我的钱包"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                    <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light" />

                </LinearLayout>

                            <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/divider_horizontal" />

                            <!-- 我的认证 -->
                <LinearLayout
                                android:id="@+id/llMyVerification"
                    android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_certification_icon" />

                                <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                                    android:text="我的认证"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                    <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light" />

                </LinearLayout>

                            <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/divider_horizontal" />

                            <!-- 我的缘份 -->
                <LinearLayout
                                android:id="@+id/llMyFate"
                    android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_yuan_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                                    android:text="我的缘份"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                    <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light" />

                </LinearLayout>

                            <!-- 分割线 -->
                <View
                    android:layout_width="match_parent"
                                android:layout_height="1px"
                                android:layout_marginStart="16dp"
                                android:layout_marginEnd="16dp"
                                android:background="@drawable/divider_horizontal" />

                <!-- 设置 -->
                <LinearLayout
                                android:id="@+id/llSettings"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:foreground="?android:attr/selectableItemBackground"
                                android:gravity="center_vertical"
                    android:orientation="horizontal"
                                android:paddingStart="16dp"
                                android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                                    android:layout_marginEnd="12dp"
                                    android:src="@mipmap/my_setting_icon" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="设置"
                                    android:textColor="@color/text_primary_dark"
                                    android:textSize="16sp" />

                    <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@mipmap/arrow_right_icon"
                                    android:tint="@color/text_hint_light"
                                    tools:ignore="UseAppTint" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

            </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>