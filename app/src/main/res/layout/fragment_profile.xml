<?xml version="1.0" encoding="utf-8"?>
<com.scwang.smart.refresh.layout.SmartRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/refreshLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- 个人信息容器 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/profileHeader"
                android:layout_width="match_parent"
                android:layout_height="280dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="@drawable/profile_header_bg">
                <!-- 圆形头像容器 -->
                <FrameLayout
                    android:id="@+id/avatarContainer"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="80dp">

                    <!-- 圆形头像 -->
                    <com.xly.middlelibrary.widget.LYRoundImageView
                        android:id="@+id/avatarImage"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:scaleType="centerCrop"
                        android:src="@mipmap/head_two" />

                    <!-- 认证标识（头像右下角） -->
                    <ImageView
                        android:id="@+id/ivVerified"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_gravity="bottom|end"
                        android:layout_marginEnd="2dp"
                        android:layout_marginBottom="2dp"
                        android:src="@mipmap/verified_icon"
                        android:padding="4dp" />

                </FrameLayout>

                <!-- 姓名和VIP标识 -->
                <LinearLayout
                    android:id="@+id/nameContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    app:layout_constraintTop_toBottomOf="@id/avatarContainer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="16dp">

                    <!-- 姓名 -->
                    <TextView
                        android:id="@+id/nicknameText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ella"
                        android:textSize="22sp"
                        android:textColor="@color/text_primary_dark"
                        android:textStyle="bold" />

                    <!-- VIP标识 -->
                    <ImageView
                        android:id="@+id/ivVip"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginStart="6dp"
                        android:src="@mipmap/main_vip_icon" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 主要板块容器 - 左上和右上圆角 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/mainSectionCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/bg_profile_section"
                app:layout_constraintTop_toBottomOf="@id/profileHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- 第一部分：三个入口 - 横向布局 -->
                    <LinearLayout
                        android:id="@+id/llStatsEntry"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="20dp"
                        android:paddingBottom="20dp"
                        android:weightSum="3">

                        <!-- 喜欢的人 -->
                        <LinearLayout
                            android:id="@+id/llLikedPeople"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/tvLikedPeopleCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="128"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="喜欢的人"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint" />

                        </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/divider"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <!-- 访客 -->
                        <LinearLayout
                            android:id="@+id/llVisitors"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/tvVisitorsCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="56"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="访客"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint" />

                        </LinearLayout>

                        <!-- 竖线分割 -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/divider"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp" />

                        <!-- 谁喜欢我 -->
                        <LinearLayout
                            android:id="@+id/llWhoLikedMe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?android:attr/selectableItemBackground">

                            <TextView
                                android:id="@+id/tvWhoLikedMeCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="89"
                                android:textSize="20sp"
                                android:textColor="@color/text_primary_dark"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="谁喜欢我"
                                android:textSize="12sp"
                                android:textColor="@color/text_hint" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</com.scwang.smart.refresh.layout.SmartRefreshLayout>