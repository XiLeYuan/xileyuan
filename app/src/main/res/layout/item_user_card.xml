<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_marginBottom="90dp"
    android:clickable="false"
    android:focusable="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 背景图片 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 渐变遮罩 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- 用户信息容器 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent">

            <!-- 头像和基本信息 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/avatar_border"
                    android:padding="2dp"
                    android:src="#333333"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="16dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvNameAge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="用户名，25岁"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_centerVertical="true"/>

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/verifyIv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/verified_icon"
                        android:layout_marginStart="5dp"
                        android:layout_toRightOf="@id/tvNameAge"
                        android:layout_centerVertical="true"/>

                    <TextView
                        android:id="@+id/tvLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:drawablePadding="4dp"
                        android:text="*固始"
                        android:textColor="#E0E0E0"
                        android:textSize="18sp"
                        android:layout_toRightOf="@id/verifyIv"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>

            <!-- 个人简介 -->
            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:ellipsize="end"
                android:maxLines="3"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="14sp"
                android:visibility="gone"/>

            <!-- 家乡和居住地 -->
            <LinearLayout
                android:id="@+id/llLocationContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone">

                <!-- 家乡 -->
                <LinearLayout
                    android:id="@+id/llHometown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivHometown"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/home_town_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="家乡" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="家乡"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />

                    <!-- 圆点分隔符（家乡和地点之间） -->
                    <TextView
                        android:id="@+id/tvHometownDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="·"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvHometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="河北"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- 现居地 -->
                <LinearLayout
                    android:id="@+id/llResidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivResidence"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/residence_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="现居地" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="现居地"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />

                    <!-- 圆点分隔符（现居地和地点之间） -->
                    <TextView
                        android:id="@+id/tvResidenceDot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2dp"
                        android:layout_marginEnd="2dp"
                        android:text="·"
                        android:textSize="18sp"
                        android:textColor="@android:color/white"
                        android:gravity="center"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tvResidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="北京"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <!-- 标签容器 -->
            <com.google.android.flexbox.FlexboxLayout
                android:id="@+id/tagContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="12dp"
                app:flexDirection="row"
                app:flexWrap="wrap"
                app:justifyContent="flex_start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/tag_background_black_transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="旅行"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/tag_background_black_transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="摄影"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/tag_background_black_transparent"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:text="音乐"
                    android:textColor="@android:color/white"
                    android:textSize="12sp" />

            </com.google.android.flexbox.FlexboxLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/arrowRightIv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_arrow_down"
                    android:background="@drawable/bg_white_circle_transparent"
                    android:padding="3dp"
                    android:layout_marginEnd="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />

            </RelativeLayout>







        </LinearLayout>






    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>