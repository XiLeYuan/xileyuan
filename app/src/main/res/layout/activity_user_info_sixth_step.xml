<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_secondary"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 标题栏：包含标题和跳过按钮 -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="34dp"
            android:paddingBottom="16dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <!-- 标题：身份验证（第六步） -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份验证"
                android:textSize="18sp"
                android:textColor="@color/text_primary"
                android:layout_centerInParent="true" />

            <!-- 跳过按钮 -->
            <TextView
                android:id="@+id/tvSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳过"
                android:textSize="16sp"
                android:textColor="@color/text_secondary"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="gone"/>

        </RelativeLayout>

    <!-- 卡片容器 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/bg_info_card_white"
        android:layout_marginTop="10dp"
        android:paddingStart="0dp"
        android:paddingEnd="0dp"
        android:paddingTop="0dp"
        android:paddingBottom="0dp">

        <!-- 第一行：姓名 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="56dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="姓名"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/etName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="textPersonName"
                android:maxLength="20"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textCursorDrawable="@drawable/cursor_dark"
                android:background="@android:color/transparent"
                android:hint="请输入姓名"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="end|center_vertical" />

        </LinearLayout>

        <!-- 分割线 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/divider"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp" />

        <!-- 第二行：身份证号 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:minHeight="56dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="身份证号"
                android:textSize="16sp"
                android:textColor="@color/text_primary" />

            <EditText
                android:id="@+id/etIdCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:inputType="text"
                android:maxLength="18"
                android:textSize="16sp"
                android:textColor="@color/text_primary"
                android:textCursorDrawable="@drawable/cursor_dark"
                android:background="@android:color/transparent"
                android:hint="请输入身份证号"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="end|center_vertical" />

        </LinearLayout>

        </LinearLayout>

        <!-- 下一步按钮 -->
        <FrameLayout
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:minWidth="80dp"
            android:background="@drawable/bg_next_button_gradient"
            android:clickable="true"
            android:focusable="true"
            android:enabled="false"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/ivArrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@mipmap/login_arrow_icon"
                android:contentDescription="下一步"
                android:scaleType="fitCenter" />

            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:id="@+id/progressBar"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:indeterminate="true"
                android:visibility="gone"
                app:indicatorColor="@color/white"
                app:indicatorSize="20dp"
                app:trackThickness="2dp" />

        </FrameLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>


