<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="32dp">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:text="你是做什么工作的？"
        android:textColor="#222222"
        android:textSize="20sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp">

        <EditText
            android:id="@+id/etJob"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/bg_education_unselected"
            android:gravity="center_vertical"
            android:hint="请输入职业"
            android:paddingStart="16dp"
            android:paddingEnd="48dp"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/btnClearJob"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:visibility="gone" />
    </FrameLayout>

    <TextView
        android:id="@+id/tvIncomeTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="年收入是？"
        android:textColor="#222222"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/gridIncome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIncome1"
                style="@style/IncomeOptionStyle"
                android:text="5万以下" />

            <TextView
                android:id="@+id/tvIncome2"
                style="@style/IncomeOptionStyle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="5-10万" />

            <TextView
                android:id="@+id/tvIncome3"
                style="@style/IncomeOptionStyle"
                android:text="10-20万" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIncome4"
                style="@style/IncomeOptionStyle"
                android:text="20-30万" />

            <TextView
                android:id="@+id/tvIncome5"
                style="@style/IncomeOptionStyle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="30-60万" />

            <TextView
                android:id="@+id/tvIncome6"
                style="@style/IncomeOptionStyle"
                android:text="60-100万" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvIncome7"
                style="@style/IncomeOptionStyle"
                android:text="100万以上" />
            <TextView
                android:id="@+id/tvIncome8"
                style="@style/IncomeOptionStyle"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="100万以上"
                android:visibility="invisible"/>
            <TextView
                android:id="@+id/tvIncome9"
                style="@style/IncomeOptionStyle"
                android:text="100万以上"
                android:visibility="invisible"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="*完善收入信息，我们将为您精准推荐更合适的人"
        android:textColor="#888888"
        android:textSize="16sp" />

</LinearLayout>
