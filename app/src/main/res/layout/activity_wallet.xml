<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFFFF">

    <!-- 底部固定栏 -->
    <LinearLayout
        android:id="@+id/bottomLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFFFF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="12dp"
        android:paddingBottom="46dp">

        <!-- 恢复购买 -->
        <TextView
            android:id="@+id/tvRestorePurchase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="恢复购买"
            android:textColor="#FF666666"
            android:textSize="12sp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:padding="4dp" />

        <!-- 立即购买按钮 -->
        <TextView
            android:id="@+id/btnBuyNow"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/bg_wallet_buy_button"
            android:gravity="center"
            android:text="立即购买"
            android:textColor="#FFFFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            android:clickable="true"
            android:focusable="true" />

        <!-- 协议复选框和文字 -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.xly.middlelibrary.widget.CustomCheckBox
                android:id="@+id/cbAgreement"
                android:layout_width="15dp"
                android:layout_height="15dp" />

            <TextView
                android:id="@+id/tvAgreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="同意《钻石币充值服务协议》"
                android:textColor="#FF999999"
                android:textSize="11sp"
                android:lineSpacingMultiplier="1.2" />
        </LinearLayout>
    </LinearLayout>

    <!-- 可滚动内容区域 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottomLl"
        android:fillViewport="true"
        android:overScrollMode="never">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 顶部标题栏（带渐变背景） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/bg_wallet_header_gradient"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/ivBack"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_arrow_left_black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    tools:ignore="ContentDescription" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="钻石币"
                    android:textColor="#FF333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivHelp"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@mipmap/ic_arrow_left_black"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="4dp"
                    tools:ignore="ContentDescription" />
            </LinearLayout>

            <!-- 用户余额区域（带渐变背景） -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_wallet_header_gradient"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:paddingTop="16dp"
                android:paddingBottom="24dp">

                <!-- 用户头像 -->
                <com.xly.middlelibrary.widget.LYRoundImageView
                    android:id="@+id/ivUserAvatar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@mipmap/head_img"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="12dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="钻石币余额"
                        android:textColor="#FF333333"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvDiamondBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="0"
                        android:textColor="#FF333333"
                        android:textSize="32sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- 查看明细按钮 -->
                <TextView
                    android:id="@+id/tvViewDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="查看明细 >"
                    android:textColor="#FF666666"
                    android:textSize="12sp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- 充值选项卡片容器 -->
            <HorizontalScrollView
                android:id="@+id/hsvRechargeOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:scrollbars="none"
                android:fadingEdge="none">

                <LinearLayout
                    android:id="@+id/llRechargeOptions"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <!-- 充值卡片将通过代码动态添加 -->
                </LinearLayout>
            </HorizontalScrollView>

            <!-- 钻石币八大用途 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="钻石币八大用途"
                    android:textColor="#FF333333"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 用途网格（2行4列） -->
                <LinearLayout
                    android:id="@+id/llUsageGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <!-- 第一行 -->
                    <LinearLayout
                        android:id="@+id/llUsageRow1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <!-- 用途项将通过代码动态添加 -->
                    </LinearLayout>

                    <!-- 第二行 -->
                    <LinearLayout
                        android:id="@+id/llUsageRow2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="horizontal">

                        <!-- 用途项将通过代码动态添加 -->
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!-- 底部间距 -->
            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
