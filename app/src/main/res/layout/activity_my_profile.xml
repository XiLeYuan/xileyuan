<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7">


    <!-- 模糊背景图容器 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/llBackgroundContainer"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- 模糊背景图片 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivBlurBackground"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="fitXY"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 渐变遮罩 -->
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/gradient_overlay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- 个人头像 - 居中显示 -->
        <FrameLayout
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:background="@drawable/avatar_border"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:scaleType="centerCrop" />

        </FrameLayout>

        <RelativeLayout
            android:id="@+id/navRl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="34dp">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_arrow_left"
                android:tint="@android:color/white"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="返回" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="预览"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_marginEnd="16dp"/>


        </RelativeLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <!-- 滚动容器 -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="82dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/topView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:cardBackgroundColor="@android:color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@color/transparent"/>



            <!-- 个人信息模块 - 漂浮在背景上层 -->
            <LinearLayout
                android:id="@+id/cardUserInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="-100dp"
                android:orientation="vertical"
                android:background="@drawable/bg_user_info_top_rounded"
                android:padding="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/topView">

                    <!-- 个人照片区域 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="24dp">

                        <!-- 标题 -->
                        <TextView
                            android:id="@+id/tvPhotosTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个人照片（1/6）"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 横向滑动的图片列表 -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rvPhotos"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp" />

                    </LinearLayout>

                    <!-- 基本资料标题 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="基本资料"
                            android:textColor="@color/text_primary_dark"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivEditBasicInfo"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_arrow_right"
                            android:tint="@color/text_secondary"
                            android:clickable="true"
                            android:focusable="true"
                            android:contentDescription="编辑基本资料" />

                    </LinearLayout>

                    <!-- 基本资料标签容器 -->
                    <com.google.android.flexbox.FlexboxLayout
                        android:id="@+id/llBasicInfoTags"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:flexDirection="row"
                        app:flexWrap="wrap"
                        app:alignItems="flex_start"
                        app:justifyContent="flex_start" />

                    <!-- 关于我 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="关于我"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="热爱生活，喜欢旅行和摄影，希望找到志同道合的另一半"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

                    <!-- 择偶要求 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="择偶要求"
                        android:textColor="@color/text_primary_dark"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvMateRequirement"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="希望对方年龄在25-35岁之间，身高170cm以上，有稳定工作，性格开朗，热爱生活"
                        android:textColor="@color/text_primary"
                        android:textSize="15sp"
                        android:lineSpacingExtra="4dp" />

            </LinearLayout>

            <!-- 底部留白 -->
            <View
                android:id="@+id/viewOne"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/cardUserInfo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#ffffff"/>

            <View
                android:id="@+id/viewTwo"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/viewOne"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#ffffff"/>

            <View
                android:id="@+id/viewThree"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="#ffffff"
                app:layout_constraintTop_toBottomOf="@id/viewTwo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

