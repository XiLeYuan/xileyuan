<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 用户头像区域 - 占满整个卡片，宽高比4:5 -->
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/head_img"
            app:layout_constraintDimensionRatio="4:5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- 底部渐变阴影层 -->
        <View
            android:id="@+id/vGradientShadow"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:background="@drawable/bg_gradient_shadow_bottom"
            app:layout_constraintStart_toStartOf="@id/ivAvatar"
            app:layout_constraintEnd_toEndOf="@id/ivAvatar"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar" />

        <!-- 基本信息容器 - 显示在图片左下角的阴影层上 -->
        <LinearLayout
            android:id="@+id/llInfoContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/ivAvatar"
            android:layout_marginBottom="8dp">

            <!-- 姓名和年龄 -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvNameAge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="小美，25岁"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@android:color/white" />

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ivVerified"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvNameAge"
                    android:src="@mipmap/verified_icon"
                    android:layout_marginStart="5dp"
                    android:visibility="gone"/>

                <!-- 送花/送爱心入口 -->
                <ImageView
                    android:id="@+id/ivFlowIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:src="@mipmap/flow_icon"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackgroundBorderless" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- 家乡和居住地 -->
            <LinearLayout
                android:id="@+id/llLocationContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 家乡 -->
                <LinearLayout
                    android:id="@+id/llHometown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivHometown"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/home_town_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="家乡" />

                    <TextView
                        android:id="@+id/tvHometown"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="家乡河北"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

                <!-- 居住地 -->
                <LinearLayout
                    android:id="@+id/llResidence"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/ivResidence"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/residence_icon"
                        android:scaleType="fitCenter"
                        android:contentDescription="居住地" />

                    <TextView
                        android:id="@+id/tvResidence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="居住地北京"
                        android:textSize="14sp"
                        android:textColor="@android:color/white" />
                </LinearLayout>

            </LinearLayout>

            <!-- 标签 -->
            <LinearLayout
                android:id="@+id/llTags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:visibility="gone">

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
