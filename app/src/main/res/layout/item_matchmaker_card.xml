<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- 顶部：头像和信息 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- 头像容器（包含头像和认证标识） -->
            <FrameLayout
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="0dp">

                <!-- 头像 -->
                <com.xly.middlelibrary.widget.LYRoundImageView
                    android:id="@+id/ivAvatar"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/head_img" />

                <!-- 认证标识（头像右下角） -->
                <ImageView
                    android:id="@+id/ivVerified"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="bottom|end"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="2dp"
                    android:src="@mipmap/verified_icon"
                    android:visibility="visible"
                    android:background="@drawable/black_circle_bg"
                    android:padding="2dp" />

            </FrameLayout>

            <!-- 红娘信息 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <!-- 姓名 -->
                <TextView
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="张红娘"
                    android:textSize="@dimen/text_size_h4"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <!-- 评分和用户数量 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <!-- 评分 -->
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@mipmap/zan_select"/>

                    <TextView
                        android:id="@+id/tvRating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="4.8"
                        android:textSize="@dimen/text_size_body_small"
                        android:textColor="@color/text_secondary" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:background="@color/divider" />

                    <!-- 用户数量 -->
                    <TextView
                        android:id="@+id/tvUserCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="128位用户"
                        android:textSize="@dimen/text_size_body_small"
                        android:textColor="@color/text_secondary" />

                </LinearLayout>

            </LinearLayout>

            <!-- VIP标识（如果有） -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/tvVIP"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:textSize="@dimen/text_size_tiny"
                android:textColor="@color/text_white"
                android:background="@mipmap/main_vip_icon"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>

        </LinearLayout>

        <!-- 服务区域 -->
        <TextView
            android:id="@+id/tvLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:text="固始"
            android:textSize="@dimen/text_size_body_small"
            android:textColor="@color/text_secondary" />

        <!-- 简介 -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="10年专业经验，成功撮合500+对新人，擅长高端客户匹配"
            android:textSize="@dimen/text_size_body_small"
            android:textColor="@color/text_secondary"
            android:maxLines="2"
            android:ellipsize="end"
            android:lineSpacingExtra="4dp" />

        <!-- 标签 -->
        <LinearLayout
            android:id="@+id/llTags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal">

        </LinearLayout>

        <!-- 底部：服务信息和按钮 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- 成功案例 -->
            <TextView
                android:id="@+id/tvSuccessRate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="成功率：95%"
                android:textSize="@dimen/text_size_body_small"
                android:textColor="@color/text_success" />

            <!-- 查看详情按钮（箭头图标） -->
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivViewDetails"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_arrow_right"
                android:background="@drawable/bg_view_details_button"
                android:padding="6dp"
                android:contentDescription="查看用户资源"
                app:tint="@color/text_accent" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>