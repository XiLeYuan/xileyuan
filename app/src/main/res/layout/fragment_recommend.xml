<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/bg_primary"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- 导航栏 -->
    <RelativeLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="34dp">

        <!-- 自定义Tab容器 - 居中显示 -->
        <FrameLayout
            android:id="@+id/tabContainer"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:background="@drawable/bg_tab_container"
            android:padding="4dp"
            android:clipToPadding="false"
            android:clipChildren="false">

            <!-- 滑动背景 -->
            <View
                android:id="@+id/tabSelectedBackground"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:background="@drawable/bg_tab_selected"
                android:visibility="invisible" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- 推荐Tab -->
                <TextView
                    android:id="@+id/tabRecommend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="推荐"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minWidth="60dp" />

                <!-- 同乡Tab -->
                <TextView
                    android:id="@+id/tabHometown"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="同乡"
                    android:textSize="14sp"
                    android:textColor="@color/text_primary"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:gravity="center"
                    android:minWidth="60dp" />

            </LinearLayout>

        </FrameLayout>

        <!-- 筛选入口 -->
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/ivFilter"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_filter"
            android:contentDescription="筛选"
            android:padding="8dp"
            android:background="@drawable/bg_filter_circle_selector"
            android:clickable="true"
            android:focusable="true"/>

    </RelativeLayout>

    <!-- ViewPager2 -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
