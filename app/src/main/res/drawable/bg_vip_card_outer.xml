<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 阴影层 - 增强立体感 -->
    <item
        android:top="2dp"
        android:left="4dp"
        android:right="4dp"
        android:bottom="-2dp">
        <shape android:shape="rectangle">
            <solid android:color="#20000000" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <!-- 主渐变背景 - 外层暖金黄色渐变（较深） -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FFD4A5"
                android:centerColor="#FFC966"
                android:endColor="#FFB84D"
                android:centerX="0.5"
                android:centerY="0.5"/>
            <corners android:radius="12dp" />
        </shape>
    </item>
    
    <!-- 光泽效果 -->
    <item
        android:top="0dp"
        android:bottom="80dp">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="270"
                android:startColor="#50FFFFFF"
                android:endColor="#00FFFFFF"/>
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" />
        </shape>
    </item>
</layer-list>

