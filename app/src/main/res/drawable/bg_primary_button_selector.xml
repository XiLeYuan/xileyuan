<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 按压状态 -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#E85A5A"
                android:centerColor="#D84A4A"
                android:endColor="#C83A3A" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!-- 正常状态 -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:angle="135"
                android:startColor="#FF8E8E"
                android:centerColor="#FF6B6B"
                android:endColor="#E85A5A" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</selector>

